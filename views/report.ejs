        <div class="container"><a class="navbar-brand d-flex align-items-center" href="/"><span
                    class="bs-icon-sm bs-icon-circle bs-icon-primary shadow d-flex justify-content-center align-items-center me-2 bs-icon"><svg
                        xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor"
                        viewBox="0 0 16 16" class="bi bi-bezier">
                        <path fill-rule="evenodd"
                            d="M0 10.5A1.5 1.5 0 0 1 1.5 9h1A1.5 1.5 0 0 1 4 10.5v1A1.5 1.5 0 0 1 2.5 13h-1A1.5 1.5 0 0 1 0 11.5v-1zm1.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1zm10.5.5A1.5 1.5 0 0 1 13.5 9h1a1.5 1.5 0 0 1 1.5 1.5v1a1.5 1.5 0 0 1-1.5 1.5h-1a1.5 1.5 0 0 1-1.5-1.5v-1zm1.5-.5a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1zM6 4.5A1.5 1.5 0 0 1 7.5 3h1A1.5 1.5 0 0 1 10 4.5v1A1.5 1.5 0 0 1 8.5 7h-1A1.5 1.5 0 0 1 6 5.5v-1zM7.5 4a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h1a.5.5 0 0 0 .5-.5v-1a.5.5 0 0 0-.5-.5h-1z">
                        </path>
                        <path
                            d="M6 4.5H1.866a1 1 0 1 0 0 1h2.668A6.517 6.517 0 0 0 1.814 9H2.5c.123 0 .244.015.358.043a5.517 5.517 0 0 1 3.185-3.185A1.503 1.503 0 0 1 6 5.5v-1zm3.957 1.358A1.5 1.5 0 0 0 10 5.5v-1h4.134a1 1 0 1 1 0 1h-2.668a6.517 6.517 0 0 1 2.72 3.5H13.5c-.123 0-.243.015-.358.043a5.517 5.517 0 0 0-3.185-3.185z">
                        </path>
                    </svg></span><span>ProxyReport</span></a>
                    <% if (locals.user.accountType !==undefined && (locals.user.accountType==='2' ||
                    locals.user.accountType==='3' ) ) { %>
                    <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navcol-1"><span
                            class="visually-hidden">Toggle navigation</span><span
                            class="navbar-toggler-icon"></span></button>
                    <div id="navcol-1" class="collapse navbar-collapse">
                        <ul class="navbar-nav ms-auto" style="margin-right: 5%;">
                            <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                            <li class="nav-item"><a class="nav-link active" href="/adminpanel">Admin Panel</a></li>
                            <li class="nav-item"><a class="nav-link active link-primary" href="/logout">Logout</a></li>
                        </ul>
                    </div>
                    <% } else { %>
                        <button class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navcol-1"><span
                                class="visually-hidden">Toggle navigation</span><span
                                class="navbar-toggler-icon"></span></button>
                        <div id="navcol-1" class="collapse navbar-collapse">
                            <ul class="navbar-nav ms-auto" style="margin-right: 5%;">
                                <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                                <li class="nav-item"><a class="nav-link active link-primary" href="/logout">Logout</a></li>
                            </ul>
                        </div>
                        <% } %>
        </div>
    </nav>
    <header class="bg-dark"></header>
    <% if (locals.waitStaff !== undefined) { %>
        <section>
            <div class="container mt-3 alert alert-danger alert-dismissible">
                <strong>
                  Wait for a staff reply.
                </strong>
              </div>
        </section>
    <% } %>
    <section>
        <div class="container py-2">
            <h1 class="text-center">Report information</h1>
        </div>
    </section>
    <section>
        <div class="container">
            <div class="col"><span class="counter pull-right"></span>
                <div class="table-responsive table table-hover table-bordered results">
                    <table class="table table-striped table-dark table-bordered">
                        <thead class="bill-header cs">
                            <tr></tr>
                        </thead>
                        <tbody>
                            <% if (locals.report !==undefined) { %>
                                <tr>
                                    <th style="width: 35%;">Reporter</th>
                                    <td>
                                        <%= locals.report.PLAYERNAME %>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="width: 35%;">Reported</th>
                                    <td>
                                        <% if (locals.report.REPORTEDNAME !== undefined){ %> 
                                            <%= locals.report.REPORTEDNAME %>
                                            <% } else { %> n/a
                                        <% } %>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="width: 35%;">Reason</th>
                                    <td>
                                        <%= locals.report.REASON %>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="width: 35%;">Server</th>
                                    <td>
                                        <%= locals.report.SERVER %>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="width: 35%;">Status</th>
                                    <td>
                                        <% let status;
                                         if (locals.report.STATUS == "1") { 
                                            status = "Open";
                                             } else { 
                                            status = "Closed";
                                             } %>
                                        <%= status %>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="width: 35%;">Open date</th>
                                    <td>
                                        <%= new Date(Number(locals.report.OPENDATE)).toString() %>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="width: 35%;">Closed date</th>
                                    <td>
                                        <% let closedDate;
                                         if (locals.report.CLOSEDDATE !== undefined){ closedDate = new Date(Number(locals.report.CLOSEDDATE)).toString() } else { closedDate = "n/a" } %>
                                         <%= closedDate %>
                                    </td>
                                </tr>
                                <tr>
                                    <th style="width: 35%;">Close reason</th>
                                    <td>
                                        <% let closeReason;
                                         if (locals.report.CLOSEREASON !== undefined){ closeReason = locals.report.CLOSEREASON } else { closeReason = "n/a" } %>
                                         <%= closeReason %>
                                    </td>
                                </tr>
                                <% } %>
                        </tbody>
                    </table>
                    <% if (locals.report !==undefined && locals.report.STATUS != false) { %>
                        <section>
                            <form action="/closeReport" method="POST">
                                <div class="d-flex" style="margin-left: auto;
                                margin-right: auto;
                                justify-content: center;">
                                    <input type="text" placeholder="Enter a close reason" style="max-width: 25%;" class="form-control" name="closeReason">
                                    <button class="btn btn-danger shadow d-block" type="submit" name="closeReport" id="closeReport" value="<%= locals.report.ID %>">Close report</button>
                                </div>
                            
                            </form>
                        </section>
                        <% } %>
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="container py-2">
            <h1 class="text-center">Replies</h1>
        </div>
    </section>

    <% if (locals.report !==undefined && locals.report.STATUS != false) { %>
    <section>
        <form action="/reportAddReply" method="POST" name="addreply" id="addreply">
            <div class="d-flex" style="margin-left: auto;
            margin-right: auto;
            justify-content: center;">
            <input type="hidden" name="reportid" id="reportid" value="<%= locals.report.ID %>">
                <input type="text" placeholder="Enter your reply" style="max-width: 25%;" class="form-control" name="replytext">
                <button class="btn btn-primary shadow d-block" type="submit">Submit</button>
            </div>
        
        </form>
    </section>
    <% } %>
    <section>
        <div class="container">
            <div class="col"><span class="counter pull-right"></span>
                <div class="table-responsive table table-hover table-bordered results">
                    <table class="table table-striped table-dark table-bordered">
                        <thead class="bill-header cs">
                            <tr></tr>
                        </thead>
                        <tbody>
                            <% if (locals.replies !==undefined) { %>
                                <% for(let i=0; i < replies.length; i++) { %>
                                    <tr>
                                        <th style="width: 35%;"><%= locals.replies[i].SENDER %></th>
                                        <td><%= locals.replies[i].MESSAGE %></td>
                                    </tr>
                                    <% } %>
                                        <% } %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/js/script.min.js"></script>
</body>

</html>